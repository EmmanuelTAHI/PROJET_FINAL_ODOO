<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue formulaire pour les équipements -->
    <record id="view_it_asset_form" model="ir.ui.view">
        <field name="name">it.asset.form</field>
        <field name="model">it.asset</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Équipement Informatique">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de l'équipement"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Détails de l'équipement">
                            <field name="image" widget="image" class="oe_avatar" width="100" height="100"/>
                            <field name="category"/>
                            <field name="serial_number"/>
                            <field name="asset_tag"/>
                            <field name="client_id" options="{'no_create': True}"/>
                            <field name="assigned_user_id"/>
                        </group>
                        <group string="État et Dates">
                            <field name="state"/>
                            <field name="status"/>
                            <field name="purchase_date"/>
                            <field name="warranty_end_date"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <group string="Informations financières">
                        <field name="contract_id" options="{'no_create': True}"/>
                        <field name="cost"/>
                        <field name="amortization_years"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Notes Internes">
                            <field name="notes"/>
                        </page>
                        <page string="Pièces Jointes">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue Kanban pour voir tous les équipements -->
    <record id="view_it_asset_kanban" model="ir.ui.view">
        <field name="name">it.asset.kanban</field>
        <field name="model">it.asset</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="image"/>
                <field name="name"/>
                <field name="category"/>
                <field name="serial_number"/>
                <field name="client_id"/>
                <field name="state"/>
                <field name="status"/>
                <field name="warranty_end_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <field name="image" widget="image" class="oe_kanban_image" style="width: 100px; height: 100px;"/>
                                <strong><field name="name"/></strong><br/>
                                <div>Catégorie: <field name="category"/></div>
                                <div>Client: <field name="client_id"/></div>
                                <div>Statut: <field name="status"/></div>
                                <div>État: <field name="state"/></div>
                                <div>Fin de garantie: <field name="warranty_end_date"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Liste (Tree) pour voir tous les équipements -->
    <record id="view_it_asset_list" model="ir.ui.view">
        <field name="name">it.asset.list</field>
        <field name="model">it.asset</field>
        <field name="arch" type="xml">
            <list string="Équipements">
                <field name="image" widget="image" string="Image" width="50" height="50"/>
                <field name="name"/>
                <field name="category"/>
                <field name="serial_number"/>
                <field name="client_id"/>
                <field name="state"/>
                <field name="status"/>
                <field name="warranty_end_date"/>
            </list>
        </field>
    </record>

    <!-- Vue de recherche pour filtrer les équipements -->
    <record id="view_it_asset_search" model="ir.ui.view">
        <field name="name">it.asset.search</field>
        <field name="model">it.asset</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category"/>
                <field name="client_id"/>
                <field name="state"/>
                <field name="status"/>
                <filter string="En Service" name="en_service" domain="[('state', '=', 'en_service')]"/>
                <filter string="Nouveau" name="nouveau" domain="[('status', '=', 'nouveau')]"/>
                <group expand="1" string="Regrouper par">
                    <filter string="État" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Client" name="group_by_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Catégorie" name="group_by_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour accéder aux équipements -->
    <record id="action_it_asset" model="ir.actions.act_window">
        <field name="name">Équipements</field>
        <field name="res_model">it.asset</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Vue formulaire pour les clients -->
    <record id="view_it_client_form" model="ir.ui.view">
        <field name="name">it.client.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du client"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations Générales">
                            <field name="is_company" invisible="1"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="street"/>
                            <field name="city"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                        <group string="Détails">
                            <field name="equipment_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contacts">
                            <field name="child_ids" widget="one2many_list">
                                <list>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue liste pour les clients -->
    <record id="view_it_client_list" model="ir.ui.view">
        <field name="name">it.client.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Clients">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="equipment_count"/>
            </list>
        </field>
    </record>

    <!-- Vue de recherche pour les clients -->
    <record id="view_it_client_search" model="ir.ui.view">
        <field name="name">it.client.search</field>
        <field name="model">res.partner</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <filter string="Clients" name="is_company" domain="[('is_company', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Action pour accéder aux clients -->
    <record id="action_it_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_company', '=', True)]</field>
        <field name="context">{'default_is_company': True}</field>
    </record>

    <!-- Vue formulaire pour les employés -->
    <record id="view_it_employe_form" model="ir.ui.view">
        <field name="name">it.employe.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Employé">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de l'employé"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations Générales">
                            <field name="is_company" invisible="1"/>
                            <field name="parent_id" string="Client" domain="[('is_company', '=', True)]" options="{'no_create': True}"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group string="Détails">
                            <field name="assigned_equipment_count" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue liste pour les employés -->
    <record id="view_it_employe_list" model="ir.ui.view">
        <field name="name">it.employe.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Employés">
                <field name="name"/>
                <field name="parent_id" string="Client"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="assigned_equipment_count"/>
            </list>
        </field>
    </record>

    <!-- Vue de recherche pour les employés -->
    <record id="view_it_employe_search" model="ir.ui.view">
        <field name="name">it.employe.search</field>
        <field name="model">res.partner</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="email"/>
                <filter string="Employés" name="is_employee" domain="[('is_company', '=', False), ('parent_id', '!=', False)]"/>
                <group expand="1" string="Regrouper par">
                    <filter string="Client" name="group_by_client" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour accéder aux employés -->
    <record id="action_it_employe" model="ir.actions.act_window">
        <field name="name">Employés</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_company', '=', False), ('parent_id', '!=', False)]</field>
        <field name="context">{'default_is_company': False}</field>
    </record>

</odoo>