<odoo>
    <template id="portal_contracts">
        <t t-call="website.layout">
            <div class="container">
                <h1>Mes Contrats</h1>
                <t t-if="contracts">
                    <ul>
                        <t t-foreach="contracts" t-as="contract">
                            <li>
                                <strong><t t-esc="contract.name"/></strong><br/>
                                <span><t t-esc="contract.start_date"/> - <t t-esc="contract.end_date"/></span><br/>
                                <span>Montant: <t t-esc="contract.amount"/> EUR</span>
                            </li>
                        </t>
                    </ul>
                </t>
                <t t-if="not contracts">
                    <p>Aucun contrat actif.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>
