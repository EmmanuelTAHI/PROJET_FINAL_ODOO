<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_it_contract_form" model="ir.ui.view">
        <field name="name">it.contract.form</field>
        <field name="model">it.contract</field>
        <field name="arch" type="xml">
            <form string="Contrat">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="client_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="frequency"/>
                        <field name="price"/>
                        <field name="service_description"/>
                        <field name="state"/>
                        <field name="next_invoice_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_it_contract_form" model="ir.ui.view">
        <field name="name">it.contract.form</field>
        <field name="model">it.contract</field>
        <field name="type">form</field> <!-- Obligatoire en Odoo 18 -->
        <field name="arch" type="xml">
            <form string="Contrats">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="client_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="frequency"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_it_contract" model="ir.actions.act_window">
        <field name="name">Contrats</field>
        <field name="res_model">it.contract</field>
        <field name="view_mode">form</field>
    </record>

</odoo>
